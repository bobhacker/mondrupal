<?php
/**
 * @file.
 * Gestion générale des utilisateurs MonDrupal.
 */

/**
 * Implements hook_preprocess_page().
 */
function md_user_preprocess_page(&$variables) {
  if (user_is_anonymous()) {
    $form = drupal_get_form('user_login');
    $variables['page']['content']['system_main']['main']['#markup'] = drupal_render($form);
  }
}
